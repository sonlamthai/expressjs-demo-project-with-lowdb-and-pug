extends ../layouts/common

block content
    .container
        h1 Login
        if errors 
            each error in errors
                .alert.alert-danger= error
        form(action="/auth/login" method="POST")
            .form-group
                label(for="Email") Email 
                input#email(type="email", name="email", class="form-control", value=values ? values.email : "")
            .form-group
                label(for="password") Password 
                input#password(type="password", name="password", class="form-control", value=values ? values.password : "")
            button.btn.btn-info(class="btn-primary mt-2") Login       
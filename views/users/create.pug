extends ../layouts/common

block content
    .container
        h1 Create New Users
        if errors 
            each error in errors
                .alert.alert-danger= error
        form(action="/users/create" method="POST", enctype="multipart/form-data")
            .form-group
                label(for="name") Name 
                input#name(type="text", name="name", class="form-control", value=values ? values.name : "")
            .form-group
                label(for="phone") Phone 
                input#phone(type="text", name="phone", class="form-control", value=values ? values.phone : "")
            .form-group
                label(for="Avatar") Avatar
                input#phone(type="file", name="avatar", class="form-control-file")    
            button.btn.btn-info(class="btn-primary mt-2") Create       